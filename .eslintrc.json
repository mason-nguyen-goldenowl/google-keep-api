{
    "root": true,
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "extends": ["eslint:recommended", "prettier"],
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true
    },
    "rules": {
        "indent": ["error", "tab"],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        // "no-empty": "warn",
        "no-cond-assign": ["error", "always"],
        "for-direction": "off"
        // "no-undefined": "off",
        // "object-curly-newline": "warn",
        // "object-shorthand": "error"
    }
}
